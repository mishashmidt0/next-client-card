{
  "name": "client-card",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint-fix": "eslint --fix",
    "prod-test": "bun run test:all:fix && bun run build",
    "test:all": "bun run tsc --noEmit && bun run test:eslint && bun run test:stylelint",
    "test:all:fix": "bun run tsc --noEmit && bun run test:eslint:fix && bun run test:prettier",
    "test:eslint": "eslint './**/*.{ts,tsx}'",
    "test:eslint:fix": "bun run test:eslint --fix",
    "test:prettier": "prettier --write './**/*.{ts,tsx,json,md}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "bun lint-fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@clerk/nextjs": "^4.27.1",
    "@radix-ui/react-avatar": "^1.0.4",
